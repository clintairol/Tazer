@page
@model Tazer.Pages.Apparels.IndexModel

@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/NewArrivals.css"/>
    <link rel="stylesheet" href="~/font-awesome/css/all.css"/>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"/>
</head>
<body class="body">
<div class="background">
    <div class="header">
        <p>Welcome to <span>TazerApparels.Co</span></p>
        <h2 class="display-4">ADMIN PAGE</h2>
        <div class="button-home">
            <a class="button" asp-area="" asp-page="/Apparels/Index">ITEMS</a>
        </div>
    </div>
</div>

<section id="header1" class="section-p1">
        <h2>New Arrivals</h2>
        <p>We love new things.</p>
    </section>
        
    <section id="product1" >
        <div class="pro-container">
            @foreach (var item in Model.Tees) {
            <div class="pro">
                <img src = "~/lib/resources/GraphicTee.png" alt = "product image">
                <div class="des">
                    <span class="brand">@Html.DisplayFor(modelItem => item.Brand)</span>
                    <h5>@Html.DisplayFor(modelItem => item.Product)</h5>
                    <div class="star">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div>
                    <h4>₱ @Html.DisplayFor(modelItem => item.Price)</h4>
                </div>
                    <a asp-page="/Apparels/.Details" asp-route-id=""><i class="fal fa-shopping-cart cart"></i>

                </a>
            </div>
            }
            </div>
    </section>
    
</body>
</html>
